{
  "compilerOptions": {
    "target": "esnext",                                  
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "auto",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "outDir": "./dist",                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
